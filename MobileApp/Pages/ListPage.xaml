<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.ListPage"
             
             xmlns:viewmodels ="clr-namespace:MobileApp.ViewModels"
             xmlns:models="clr-namespace:BusinessLibrary.Models;assembly=BusinessLibrary"
             x:DataType="{x:Type viewmodels:ListViewModel}"
             
             Title="List all contacts">

    <Grid RowDefinitions="auto, *" Margin="20">

        <Button Grid.Row="0" Text="Add new contact" Command="{Binding NavigateToAddCommand}" Margin="0,0,0,20" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding ContactList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Contact">
                    <Border BackgroundColor="Transparent" Stroke="Transparent" Padding="10" Margin="0">
                        <Grid ColumnDefinitions="*, auto">

                            <Label Grid.Column="0" Text="{Binding FirstName}" VerticalOptions="Center" VerticalTextAlignment="Center" />

                            <HorizontalStackLayout Grid.Column="1">
                                <Button Text="Edit" CommandParameter="{Binding .}" Command="{Binding Path=NavigateToEditCommand, Source={RelativeSource AncestorType={x:Type viewmodels:ListViewModel}}}" Margin="5, 0, 0, 0" />
                                <Button Text="Delete" CommandParameter="{Binding .}" Command="{Binding Path=RemoveCommand, Source={RelativeSource AncestorType={x:Type viewmodels:ListViewModel}}}" Margin="5, 0, 0, 0" />
                            </HorizontalStackLayout>

                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>



</ContentPage>