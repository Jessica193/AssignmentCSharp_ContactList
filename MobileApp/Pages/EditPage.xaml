<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
              xmlns:viewmodels ="clr-namespace:MobileApp.ViewModels"
              x:DataType="{x:Type viewmodels:EditViewModel}"
             
             x:Class="MobileApp.Pages.EditPage"
             Title="Edit contact">


    <VerticalStackLayout Grid.Row="0">

        <Label Text="First name" Margin="20,0,20,10" />
        <Entry Text="{Binding Contact.FirstName}" Margin="20,0,20,20" />

        <Label Text="Last name" Margin="20,0,20,10" />
        <Entry Text="{Binding Contact.LastName}" Margin="20,0,20,20"/>

        <Label Text="Email" Margin="20,0,20,10"/>
        <Entry Text="{Binding Contact.Email}" Margin="20,0,20,20"/>

        <Label Text="Phone number" Margin="20,0,20,10"/>
        <Entry Text="{Binding Contact.PhoneNumber}" Margin="20,0,20,20"/>

        <Label Text="Address" Margin="20,0,20,10"/>
        <Entry Text="{Binding Contact.Address}" Margin="20,0,20,20"/>

        <Label Text="Postal code" Margin="20,0,20,10"/>
        <Entry Text="{Binding Contact.PostalCode}" Margin="20,0,20,20"/>

        <Label Text="City" Margin="20,0,20,10"/>
        <Entry Text="{Binding Contact.City}" Margin="20,0,20,20"/>

        <Button Text="Save" Command="{Binding UpdateCommand}" Margin="20,0,20,20" />

    </VerticalStackLayout>


</ContentPage>